<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game">

    <ImageView
        android:id="@+id/pitjesbak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/pitjesbak" />

    <TextView
        android:id="@+id/speler1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:text="value1"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/speler2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="value2"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />




    <TextView
        android:id="@+id/scorePlayer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="510dp"
        android:text="7"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/scorePlayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:text="7"
        android:textSize="20sp"/>





    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/hidden1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clicked"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="0dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/hidden2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clicked"
            android:layout_marginBottom="0dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/hidden3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clicked"
            android:layout_marginLeft="60dp"
            android:layout_marginBottom="0dp"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <ImageButton
            android:id="@+id/button_0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/dice_1" />

        <ImageButton
            android:id="@+id/button_1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/dice_4" />

        <ImageButton
            android:id="@+id/button_2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dice_3" />


    </LinearLayout>


    <Button
        android:id="@+id/rollDices"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Roll dice"
        android:textSize="20sp" />


    <Button
        android:id="@+id/finish"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Finish"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/apen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 apen"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/soixante_neuf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soixante-neuf"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/zand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zand"
            android:textSize="10sp"/>

        <Button
            android:id="@+id/zeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zeven"
            android:textSize="10sp"/>
    </LinearLayout>


</RelativeLayout>